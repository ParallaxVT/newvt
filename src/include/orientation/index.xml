<krpano>

  <layer name="orientation"
         devices="html5"
         keep="true"
         onorientationchange="updateorientation"
         preload="true"
         url="%SWFPATH%/plugins/orientation.js"
         />

  <action name="updateorientation">
    <!-- trace(Update orientation); showlog(); -->
    if(plugin[orientation].landscape==true, orientation_landscape());
    if(plugin[orientation].portrait==true, orientation_portrait());
  </action>

  <action name="orientation_portrait">
    <!-- trace(Portrait); showlog(); -->
    if(addlogo.enabled == true, logo_orientation());
    if(addlogoclient.enabled == true, logo_client_orientation());
  </action>

  <action name="orientation_landscape">
    <!-- trace(Landscape); showlog(); -->
    logo_client_orientation();
  </action>

</krpano>
